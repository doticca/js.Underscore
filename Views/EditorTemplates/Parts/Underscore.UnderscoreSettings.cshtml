@using js.Underscore.ViewModels;
@model UnderscoreSettingsViewModel

<fieldset class="underscore">
    <legend>@T("Underscore")</legend>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="UnderscoreSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables underscore script on every page header.")</span>
    </div>
    <div data-controllerid="UnderscoreSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="UnderscoreSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables underscore script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".underscore").find("input[name='UnderscoreSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}